<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <property name="logpattern">LOG4J2 %highlight{[%-5level] %d{ HH:mm:ss.SSS} [%t] %c{1} - %msg%n}{FATAL=red
            blink, ERROR=red, WARN=yellow bold, INFO=white blink, DEBUG=green bold, TRACE=blue}
        </property>
    </Properties>

    <Appenders>
        <appender>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false" pattern="${logpattern}"/>
        </Console>
        </appender>
        <appender name="fileAppender" class="org.apache.log4j.FileAppender">
            <param name="File" value="MarktplaatsLog.txt" />
            <layout class="org.apache.log4j.PatternLayout">
                <param name="ConversionPattern" value="%-7p %d [%t] %c %x - %m%n"/>
            </layout>
        </appender>
    </Appenders>

    <Loggers>

        <Root level="INFO">
            <AppenderRef ref="console"/>
        </Root>


    </Loggers>
</Configuration>
