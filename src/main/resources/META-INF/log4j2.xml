<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <property name="logpattern">%highlight{[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n}{FATAL=red
            blink, ERROR=red, WARN=yellow bold,CInfo=WHITE,CError=red, INFO=WHITE, DEBUG=green bold, TRACE=blue}
        </property>
    </Properties>
    <!-- Define custom levels before using them for filtering below. -->
    <CustomLevels>
        <CustomLevel name="CInfo" intLevel="350"/>
        <CustomLevel name="CError" intLevel="450"/>
    </CustomLevels>

    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false" pattern="${logpattern}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <!-- Only events at DIAG level or more specific are sent to the console. -->
            <AppenderRef ref="Console" level="diag"/>

        </Root>
    </Loggers>
</Configuration>